doctype html
html
  head

    title Ben Pang

    meta(charset='utf8')
    meta(name='viewport' content='width=device-width,initial-scale=1,user-scalable=no')
    meta(name='description' content='Personal website of Ben Pang.')

    link(rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Overpass+Mono&display=swap')
    link(rel='stylesheet' href='./css/style.css')

    link(rel='apple-touch-icon' sizes='180x180' href='./media/apple-touch-icon.png')
    link(rel='icon' type='image/png' sizes='32x32' href='./media/favicon-32x32.png')
    link(rel='icon' type='image/png' sizes='16x16' href='./media/favicon-16x16.png')
    link(rel='manifest' href='./media/site.webmanifest')

  body
    script document.body.className += ' fade'
    .container
      #root.main.drag
        .head.dragclick Ben Pang >&nbsp;#[span HOME]
        .body
          .side
            a(href='#home') HOME
            a(href='#prog') PROJECTS
            a(href='#art') ARTWORK
            a(href='#links') LINKS
          #home.content.active
            p#hello Hello.
          #prog.content Test Test 123
          #art.content
            .grid
              .size
              .gutter
              each i in fs.readdirSync('./media/art')
                .grid-item
                  img(src='./media/art/' + i loading='lazy')
          #links.content

    script(src='./js/jquery.min.js')
    script(src='./js/masonry.pkgd.min.js')
    script(src='./js/main.js')
