mixin sd
  .b.c.sd(style='margin-top:auto;opacity:0.5')
    .b.end.v1 scroll down
    .b.start.v1 &#9660;
mixin su
  .b.c.su(style='margin-bottom:auto;opacity:0.5')
    .b.start.v1 &#9650;
    .b.end.v1 scroll up
mixin sb
  .b.c(style='margin-bottom:auto;opacity:0.5')
    .b.v1 &nbsp;
    .b.v1 &nbsp;

doctype html
html
  head
    title Ben Pang
    meta(charset='utf8')
    meta(name='viewport' content='width=device-width,initial-scale=1,user-scalable=no')
    link(rel='stylesheet' href='index.css')
    style body{display:none;}
  body.b0
    .B.c(style='color:#43c59e')
      +sb
      .b.bd.end.v5(style='color:#3dfaff') HELLO
      .b.start.v5 WORLD
      +sd
    .d
    .B.c(style='color:#b3dec1')
      +su
      .b.end.v10 I AM
      .b.bd.start.v5(style='color:#e5fcf5') BEN PANG
      +sd
    .d
    .B.c(style='color:#7a6563')
      +su
      .b.h2.end.v5 I DO
      .b.h8.bd.v10(style='color:#e56399') CRAZY
      .b.h2.start.v5 EXPERIMENTS
      +sd
    .d
    .B.c(style='color:#ffbf46')
      +su
      .b.bd.end.v5(style='color:#8acb88') STUFF I DO
      .b.start.c
        .b.v2 programming
        .b.v2 art/design
        .b.v2 music
        .b.v2 speedcubing
        .b.v2 wizardry
      +sd
    .d
    .B.c(style='color:#333')
      +su
      .b.bd.end.v5 SOME LINKS
      .b.start.c
        .b.v2: a(href='https://github.com/molarmanful' target='_blank' style='color:#222') github
        .b.v2: a(href='https://reddit.com/u/molarmanful' target='_blank' style='color:#ff6961') reddit
        .b.v2: a(href='https://twitter.com/molarmanful' target='_blank' style='color:#7692ff') twitter
        .b.v2: a(href='https://facebook.com/Array.prototype.map' target='_blank' style='color:#003366') facebook
      +sb
    
    script(src='https://code.jquery.com/jquery-3.3.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/scrollify/1.0.19/jquery.scrollify.min.js')
    script.
      $(function(){
        $('body').fadeIn(1000,function(){
          $.scrollify({
            section:'.B',
            updateSection:!1,
            setHeights:!1,
            scrollSpeed:500,
            updateHash:!1,
            before:function(x){$('body').removeClass().addClass('b'+x)}
          })
        })
        $('.sd').click(function(){
          $.scrollify.next()
        })
        $('.su').click(function(){
          $.scrollify.previous()
        })
        $(window).on('beforeunload',function(){scrollTo(0,0)})
      })