@import url('https://fonts.googleapis.com/css?family=Space+Mono:400,700')

html,body
  width 100%
  height 100%
  margin 0
  font-family Space Mono
  color #aaa
  transition background-color .5s
body
  display none
  overflow hidden
.d
  margin-bottom 20%
.B
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
.b
  display flex
  align-items center
  justify-content center
.h1
  height 100%
.h2
  height 50%
.h4
  height 25%
.h8
  height 12.5%
.w1
  width 100%
.w2
  width 50%
.w4
  width 25%
.w8
  width 12.5%
.r
  flex-direction row
.c
  flex-direction column
.bd
  font-weight bold
  color #333
.lh,.l,.lv,.lp,.lpv,.lpV
  text-decoration none
  transition .5s
.l,.lh
  background linear-gradient(0deg,currentcolor,currentcolor) bottom left no-repeat
  background-size 0 1px
.lh:hover,.L
  background-size 100% 1px
.lv
  background linear-gradient(0deg,currentcolor,currentcolor) top left no-repeat
  background-size 1px 0
  padding-left 20px
.Lv
  background-size 1px 100%
.lp
  background linear-gradient(0deg,currentcolor,currentcolor) top right no-repeat, linear-gradient(0deg,currentcolor,currentcolor) bottom left no-repeat
  background-size 0 1px,0 1px
.Lp
  background-size 100% 1px,100% 1px
.lpv
  background linear-gradient(0deg,currentcolor,currentcolor) top left no-repeat, linear-gradient(0deg,currentcolor,currentcolor) bottom right no-repeat
  background-size 2px 0,2px 0
  padding-left 20px
  padding-right 20px
.Lpv
  background-size 2px 100%,2px 100%
.lpV
  background linear-gradient(0deg,currentcolor,currentcolor) top left no-repeat, linear-gradient(0deg,currentcolor,currentcolor) bottom right no-repeat, linear-gradient(0deg,currentcolor,currentcolor) top right no-repeat, linear-gradient(0deg,currentcolor,currentcolor) bottom left no-repeat
  background-size 1px 0,1px 0,0 1px,0 1px
  padding-left 20px
  padding-right 20px
.LpV
  background-size 1px 100%,1px 100%,100% 1px,100% 1px
#l0
  color #555
#l1
  color #ff6961
#l2
  color #7692ff
#l3
  color #aa5f92
#l4
  color #4a5299
.b0
  background #14453d
.b1
  background #750d37
.b2
  background #ece2d0
.b3
  background #575761
.b4
  background #eee
.start
  align-items flex-start
.end
  align-items flex-end
.v5
  font-size 5vw
.v10
  font-size 10vw
.v2
  font-size 2vw
.v1
  font-size 1vw
#side
  position fixed
  top 50%
  right 20px
  opacity .5
  transform translateY(-50%)
  transition .5s

@media (max-width:600px)
  .v5
    font-size 10vw
  .v10
    font-size 20vw
  .v2
    font-size 4vw
  .v1
    font-size 3.5vw
