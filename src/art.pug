include section.pug

+sec('ART')#art
  .fixed.w-screen.h-screen.inset-x-0.inset-y-0.transition-opacity.bg-black.z-50.py-16.overflow-hidden(
    x-ref='modal'
    :class='{"opacity-1": selected, "opacity-0 pointer-events-none": !selected}'
    @click='selected = ""; iloaded = false')
    .fixed.flex.top-0.right-0.w-16.h-16.cursor-pointer
      svg.m-auto.fill-current.text-gray-700(class='w-1/2 h-1/2' viewBox='0 0 100 100' alt='close')
        g(transform='rotate(45, 50, 50)')
          rect(width='100' height='20' y='40')
          rect(width='20' height='100' x='40')
    iframe.w-full.h-full.transition-opacity.text-white.m-auto(:class='{"opacity-1": iloaded, "opacity-0": !iloaded}' :src='selected && selected + ".html"' @load='iloaded = true')

  .masonry
    each f in htmlWebpackPlugin.options.art
      .cursor-pointer(
        @click.prevent=`selected = "${f}"`
        data-aos='fade-up')

        img.lazy.w-full.mb-8.border.border-black.graiscale.transition(
          class='hover:border-white'
          draggable='false'
          alt=f
          src=require(`./tiny/${f}_tiny`)
          data-src=require(`./thumbnails/${f}_thumb`))
