FONTSIZE = 1.2rem
BORDER = 2px solid #000

*, *:before, *:after
  box-sizing border-box
  user-select none !important

html, body
  width 100%
  height 100%
  margin 0
  background #fff
  color #000
  font-family Overpass Mono, monospace
  font-size FONTSIZE
  letter-spacing -(FONTSIZE / 10)
  overflow hidden

::-webkit-scrollbar
  width 6px

::-webkit-scrollbar-track
  background #000
  border-left BORDER

::-webkit-scrollbar-thumb
  background #fff
  border-left BORDER

a
  color #000
  text-decoration none

p
  margin-block-start 0

.container
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  opacity 0

  &.show
    opacity 1
    transition 1s opacity

.dragclick
  cursor move

.main
  width 50%
  height 50%
  display flex
  position absolute
  border BORDER
  background #fff
  flex-direction column

  & > *
    max-width 100%

  .head
    height FONTSIZE
    padding (FONTSIZE / 2.5)
    border-bottom BORDER
    box-sizing content-box

  .body
    height 100%
    display flex
    overflow hidden

    & > *
      height 100%

    .side
      border-right BORDER
      padding (FONTSIZE / 2.5)
      padding-right (FONTSIZE / 1.5)

      a
        display block
        margin-bottom (FONTSIZE / 2.5)
        cursor pointer

    .content
      width 100%
      padding (FONTSIZE / 2.5)
      padding-right (FONTSIZE / 1.8)
      overflow auto
      display flex

.winimg
  border BORDER
  background #fff
  position absolute

  .head
    height FONTSIZE
    padding (FONTSIZE / 2.5)
    border-bottom BORDER
    box-sizing content-box

  .close
    text-align right
    position absolute
    right 0
    top 0
    margin (FONTSIZE / 2)
    height FONTSIZE
    line-height FONTSIZE
    cursor pointer

  .body
    padding 1rem
    display inline-block
    position relative

    img
      display block
      max-width 50vw
      max-height 80vh

#home
  align-items center
  justify-content center

#art, #proj
  padding 1rem

  .grid
    width 100%

    .size, .grid-item
      width calc(25% - 1rem)

    .gutter
      width 1rem

    .grid-item
      float left
      margin-bottom 1rem

      img
        width 100%
        cursor pointer

#templates
  display none
